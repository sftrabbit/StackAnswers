<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/background_card"
		android:orientation="vertical">
	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="4dp">
		<ImageView
				android:id="@+id/site_image"
				android:layout_width="72dp"
				android:layout_height="72dp"
				android:layout_alignParentTop="true"
				android:layout_alignParentLeft="true"
				android:paddingRight="4dp" />
		<TextView
				android:id="@+id/site_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_toRightOf="@id/site_image"
				android:layout_marginTop="8dp"
				android:textAppearance="@android:style/TextAppearance.Medium" />
		<ImageButton
				style="@style/Widget.Button.Dropdown"
				android:layout_alignParentTop="true"
				android:layout_alignParentBottom="true"
				android:layout_alignParentRight="true"
				android:onClick="onDropdownClick" />
		<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/site_title"
				android:layout_toRightOf="@id/site_image"
				android:layout_marginTop="4dp">
			<TextView
					style="@style/Widget.Tag"
					android:layout_marginRight="8dp"
					android:text="c++" />
			<TextView
					style="@style/Widget.Tag"
					android:layout_marginRight="8dp"
					android:text="python" />
			<TextView
					style="@style/Widget.Tag"
					android:text="opengl" />
		</LinearLayout>
	</RelativeLayout>
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="?android:attr/textColorTertiary"
			android:background="#eef4f4f4">
		<ImageView
				android:layout_width="32dp"
				android:layout_height="32dp"
				android:src="@drawable/profile_image_placeholder" />
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="8dp"
				android:layout_marginRight="4dp"
				android:textStyle="bold"
				android:text="38,720" />
		<ImageView
				android:layout_width="10dp"
				android:layout_height="10dp"
				android:layout_margin="4dp"
				android:src="@drawable/shape_badge_gold" />
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="3" />
		<ImageView
				android:layout_width="10dp"
				android:layout_height="10dp"
				android:layout_margin="4dp"
				android:src="@drawable/shape_badge_silver" />
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="39" />
		<ImageView
				android:layout_width="10dp"
				android:layout_height="10dp"
				android:layout_margin="4dp"
				android:src="@drawable/shape_badge_bronze" />
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="116" />
	</LinearLayout>
</LinearLayout>
