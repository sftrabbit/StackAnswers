<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_card">
    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <ImageView android:id="@+id/site_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />
      <TextView android:id="@+id/site_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/site_image"
        android:layout_marginTop="8dp"
        android:textAppearance="@android:style/TextAppearance.Medium" />
      <TextView android:id="@+id/tag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/site_title"
        android:layout_toRightOf="@id/site_image"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="#D3E2F2"
        android:textColor="#2470bc"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:text="c++" />
      <TextView android:id="@+id/tag2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/site_title"
        android:layout_toRightOf="@id/tag1"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="#D3E2F2"
        android:textColor="#2470bc"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:text="python" />
      <TextView android:id="@+id/tag3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/site_title"
        android:layout_toRightOf="@id/tag2"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="#D3E2F2"
        android:textColor="#2470bc"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:text="opengl" />
    </RelativeLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="32dp"
      android:background="#eef4f4f4" />
  </LinearLayout>
</LinearLayout>
